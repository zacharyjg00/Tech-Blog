<div class="text-center">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Posted by {{user.username}} on {{format_date date_created}}</p>

    <br />

    <h3>Comments</h3>
    {{#each comments as |comment| }}
    <div class="row mb-4 comment">
        <div class="col-md-5">
            <p>
                {{comment.content}}
            </p>
        </div>
        <div class="col-md-7">
            <p>Posted by {{comment.user.username}} on {{format_date comment.date_created}}</p>
        </div>
    </div>
    {{/each}}

    <div>
        {{#if logged_in}}
        <form class="form new-comment-form">
            <div class="form-group">
                <label for="comment-content">comment content:</label>
                <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="submit-comment" data-id="{{id}}">Create</button>
            </div>
        </form>
        {{/if}}
    </div>

</div>

<script src="../js/comment.js"></script>